@model Blog.ViewModels.ArticleViewModel

@{
    ViewData["Title"] = "编辑文章";
}

<h2>编辑文章</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/stackedit@latest/dist/stackedit.min.css">
<script src="https://cdn.jsdelivr.net/npm/stackedit@latest/dist/stackedit.min.js"></script>
<div id="markdown-editor"></div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var editor = new StackEdit({
            container: document.getElementById('markdown-editor'),
            defaultContent: '# 欢迎使用Markdown编辑器！',
            // 其他配置选项
        });
    });</script>