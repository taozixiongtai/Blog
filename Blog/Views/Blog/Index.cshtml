@model List<Blog.ViewModels.ArticleViewModel>
@{
    ViewData["ShowMore"] = true;
}

<header class="hero">
    <div class="hero-bg"></div>
    <div class="hero-content">
        <img class="hero-avatar" src="/img/avatar.jpg" alt="头像">
        <h1 class="hero-title">Hi, 欢迎 !</h1>
        <p class="hero-desc"><span id="typewriter" data-text="devlopr is a jekyll framework built for developers. You can edit this in _config.yml file"></span></p>
        <div class="hero-btns">
            <a class="button hero-btn hero-btn-yellow" href="/home/bloglist">Get Started</a>
            <a class="button hero-btn hero-btn-outline hero-btn-outline-custom" href="#">What's New</a>
        </div>
    </div>
</header>
<main class="main-content">
    @await Html.PartialAsync("_ArticlesSection", Model)
</main> 